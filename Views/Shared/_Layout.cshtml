<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body onload="GetDate();">

    <header>
        <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.jpg"></a>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a>
                <li><a asp-controller="Home" asp-action="Signup">Schedule a Tour</a>
                <li><a asp-controller="Home" asp-action="Appointments">Scheduled Tours</a>
            </ul>
        </nav>
    </header>

    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
