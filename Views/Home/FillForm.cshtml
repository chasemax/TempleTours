@{
}

@model Signup

<h1>Schedule Tour</h1>

<form method="post" asp-controller="Home" asp-action="@(Model.Id == 0 ? "FillForm" : "Edit")">
    <div class="form-group">
        <label asp-for="GroupName">Group Name:</label>
        @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })
        <input asp-for="GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GroupSize">Group Size:</label>
        @Html.ValidationMessageFor(m => m.GroupSize, "", new { @class = "text-danger" })
        <input asp-for="GroupSize" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <input type="hidden" asp-for="AppointmentId"/>
    <div class="float-end">
        <input class="btn my-button" type="submit" value="@(Model.Id == 0 ? "Schedule Appointment" : "Save Changes")" />
    </div>
</form>